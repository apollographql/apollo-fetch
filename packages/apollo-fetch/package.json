{
  "name": "apollo-fetch",
  "version": "0.7.0",
  "description": "Lightweight implementation of fetch for GraphQL requests",
  "author": "Evans Hauser <evanshauser@gmail.com>",
  "contributors": [
    "Jonas Helfer <jonas@helfer.email>",
    "Sashko Stubailo <sashko@stubailo.com>",
    "Jayden Seric <me@jaydenseric.com>",
    "Kamil Kisiela <kamil.kisiela@gmail.com>"
  ],
  "license": "MIT",
  "main": "./dist/bundle.umd.js",
  "module": "./dist/index.js",
  "jsnext:main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url":
      "https://github.com/apollographql/apollo-fetch/tree/master/packages/apollo-fetch"
  },
  "bugs": {
    "url": "https://github.com/apollographql/apollo-fetch/issues"
  },
  "homepage": "https://github.com/apollographql/apollo-fetch#readme",
  "scripts": {
    "pretest": "npm run lint",
    "test": "jest",
    "test-watch": "jest --watch",
    "coverage:test": "jest --coverage",
    "coverage": "nyc --reporter=lcov npm run coverage:test",
    "lint":
      "tslint -p tsconfig.json src/*.ts && tslint -p tsconfig.test.json src/__tests__/*.ts",
    "prebuild": "npm run clean:dist",
    "build": "tsc",
    "postbuild": "npm run bundle",
    "bundle": "rollup -c",
    "watch": "tsc -w",
    "clean": "npm run clean:dist && npm run clean:coverage",
    "clean:dist": "rimraf dist/*",
    "clean:coverage": "rimraf coverage/*",
    "prepublish": "npm run clean && npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.0.8",
    "@types/chai-as-promised": "7.1.0",
    "@types/jest": "21.1.2",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "cross-fetch": "1.1.1",
    "fetch-mock": "5.13.1",
    "graphql": "0.11.7",
    "graphql-tag": "2.6.0",
    "jest": "21.2.1",
    "lerna": "2.5.1",
    "lodash": "4.17.4",
    "nyc": "11.3.0",
    "rimraf": "2.6.2",
    "rollup": "0.52.1",
    "sinon": "4.1.3",
    "source-map-support": "0.5.0",
    "ts-jest": "21.1.0",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  },
  "nyc": {
    "exclude": ["src/__tests__"]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json"]
  }
}
