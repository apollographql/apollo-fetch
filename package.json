{
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollographql/apollo-fetch.git"
  },
  "scripts": {
    "bootstrap": "npm i && lerna bootstrap && lerna run -- build",
    "test": "lerna run -- test",
    "lint-fix":
      "prettier --trailing-comma all --single-quote --write \"packages/*/{src,tests,benchmark}/**/*.{j,t}s*\"",
    "lint-staged": "lint-staged",
    "coverage": "nyc --reporter=lcov lerna run -- coverage:test"
  },
  "lint-staged": {
    "*.ts*": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ],
    "*.json*": ["prettier --write", "git add"]
  },
  "pre-commit": "lint-staged",
  "devDependencies": {
    "@types/chai": "4.1.3",
    "@types/chai-as-promised": "7.1.0",
    "@types/fetch-mock": "5.12.2",
    "@types/mocha": "2.2.48",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "fetch-mock": "5.13.1",
    "graphql": "0.13.2",
    "graphql-tag": "2.9.2",
    "lerna": "2.11.0",
    "lint-staged": "6.1.1",
    "lodash": "4.17.10",
    "mocha": "4.1.0",
    "nyc": "11.7.3",
    "pre-commit": "1.2.2",
    "prettier": "1.12.1",
    "rimraf": "2.6.2",
    "sinon": "4.5.0",
    "source-map-support": "0.5.5",
    "tslint": "5.10.0",
    "typescript": "2.6.2"
  },
  "nyc": {
    "exclude": ["**/tests"]
  },
  "//": {
    "//": "lerna run <script name>",
    "scripts": [
      "pretest",
      "test",
      "posttest",
      "test-only",
      "test-watch",
      "coverage:test",
      "coverage",
      "lint",
      "prebuild",
      "build",
      "watch",
      "clean",
      "clean,dist",
      "clean,coverage",
      "prepublish",
      "prepublishOnly"
    ]
  }
}
